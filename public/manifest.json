{
  "manifest_version": 3,
  "short_name": "Audio Transcriber",
  "name": "Audio Transcriber",
  "version": "1.0",
  "description": "An extension that records audio and transcribes it to text.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Audio Transcriber"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./contentScript.js"]
    }
  ],
  "background": { "service_worker": "./backgroundScript.js" },
  "permissions": ["storage"]
}
